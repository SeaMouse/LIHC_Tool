<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context="clifford.alan.lihctool.PropertyTypeQuestion">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/logo"
        android:paddingTop="30dp"
        android:paddingLeft="20dp"
        android:background="@color/blue"
        android:text="@string/appTitle"
        android:textColor="@color/white"
        android:textSize="45sp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/propertyTypeQuestionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="15dp"
        android:paddingLeft="40dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="@string/propertyTypeQuestion"/>

    <Button
        android:id="@+id/flat"
        android:layout_below="@id/propertyTypeQuestionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/flat"
        android:textSize="25sp"
        android:onClick="flat"/>

    <Button
        android:id="@+id/terrace"
        android:layout_below="@id/flat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/terrace"
        android:textSize="25sp"
        android:onClick="terrace"/>

    <Button
        android:id="@+id/semi_detached"
        android:layout_below="@id/terrace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/semi_detached"
        android:textSize="25sp"
        android:onClick="semi_detached"/>

    <Button
        android:id="@+id/detached"
        android:layout_below="@id/semi_detached"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/detached"
        android:textSize="25sp"
        android:onClick="detached"/>

    <Button
        android:id="@+id/bungalow"
        android:layout_below="@id/detached"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/bungalow"
        android:textSize="25sp"
        android:onClick="bungalow"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar6"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/bungalow"
        android:layout_alignStart="@+id/bungalow"
        android:layout_alignRight="@+id/bungalow"
        android:layout_alignEnd="@+id/bungalow"
        android:progress="55"
        android:progressTint="#ffffffff"/>

</RelativeLayout>
